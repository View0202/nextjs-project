{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    // ปิดกฎที่ไม่ต้องการ
    "no-unused-vars": "off",  // ปิดกฎการไม่ใช้ตัวแปร
    "@typescript-eslint/no-unused-vars": "off",  // ปิดกฎการไม่ใช้ตัวแปรใน TypeScript
    "@typescript-eslint/no-explicit-any": "off",

    // เพิ่มกฎใหม่ที่ต้องการ
    "no-console": "warn",  // แจ้งเตือนหากใช้ console.log
    "semi": ["error", "always"]  // ให้ต้องมีเครื่องหมาย semicolon
  }
}
